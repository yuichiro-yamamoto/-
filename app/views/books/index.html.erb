<table>

 <h1>Books</h1>
 
  <tr>
  	<th>Title</th>                       
	<th>Body</th>
  </tr>
 
 <% @books.each do |b| %>
  <tr>
     <td><%= b.title %></td>
     <td><%= b.body %></td>
     <td><%= link_to "Show", book_path(b.id) %></td>
     <td><%= link_to "Edit", edit_book_path(b.id) %></td>
     <td><%= link_to "Destroy", book_path(b.id), method: :'delete' %></td>

  </tr>
  <% end %>


</table>


<h2>New book</h2>


<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>
<p><%= f.submit 'Create Book' %></p>
<% end %>

